<!DOCTYPE html>
<html>
  <head>
    <title>UltimateCrmChallenge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand">Ultimate CRM Challenge</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item <%= 'active' if current_page?(root_path) %>">
            <%= link_to 'All Customers', root_path, class: "nav-link" %>  <span class="sr-only">(current)</span>
          </li>
          <li class="nav-item <%= 'active' if current_page?(customers_alphabetized_path) %>">
            <%= link_to 'Alphabetized Customers', customers_alphabetized_path, class: "nav-link" %>
          </li>
          <li class="nav-item <%= 'active' if current_page?(customers_missing_email_path) %>">
            <%= link_to 'Missing Emails', customers_missing_email_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
